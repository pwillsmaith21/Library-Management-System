@page
@model WebApplication4.Pages.account.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div>
        <form>
            <div class="container">
              <h1>Sign Up</h1>

              <label for="name"><b>First & Last Name</b></label>
              <div style="display:inline-flex;">
                <input asp-for="UserT.UserFirstName" class="form-control" />
              <br>
                <input asp-for="UserT.UserLastName" class="form-control" />
              </div>

              <label for="email"><b>Email</b></label>
                <input asp-for="UserT.UserEmail" class="form-control" />
              
              <label for="email"><b>Phone</b></label>
              <input asp-for="UserT.UserPhone" class="form-control" />           
              <label for="psw"><b>Password</b></label>
                <input asp-for="UserT.UserPassword" class="form-control" />
              <ul class='pw-requirements'>
                <li>One lowercase character</li>
                <li>One uppercase character</li>
                <li>One number</li>
                <li>One special character</li>
                <li>9 characters minimum</li>
              </ul>
              <div>
                <p>Already have an account? <a asp-page="account/Signin">Sign in</a></p> 
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div> 
            </div>
            </div>
          </form>
          </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
