@page
@model WebApplication4.Pages.Catalog.catalogModel

<body>
            <div class="form-group">
                 <a asp-page="/catalog/Create" class="btn btn-primary" >Add Item</a>
            </div>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].DatePublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].PurchasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].RentalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].ItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].AuthorNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemT[0].PublisherNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ItemT) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorNavigation.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherNavigation.PublisherId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ItemId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    <script src="~/css/isotope.pkgd.js"></script>
    <script src="~/css/catalog.js"></script>
    <script src="~/js/home.js"></script>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>