@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<body>
    <div class="searchbar">
      <div>
        <input type="text" placeholder="Search by author, author, title... ">
        <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
      </div>
      <div class="advanced">
        <button id="advanced_link">Advanced Search</button>
      </div>

      <div id="moresearch">
        <form class="moreinputs">
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Title">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Author">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Year">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Publisher">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="ISBN">
          </div>
          <hr>
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-primary">Clear</button>
        </form>
        <a asp-page="/account/Signin">Signin</a> 
        |
        <a asp-page="/account/Signup">Signup</a> 
      </div>     
    </div>
      <script src="~/css/home.js"></script>
        <!-- MDB -->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"
        ></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
